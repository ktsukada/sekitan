<h3>スタッフ</h3>
<hr>

<table class='table table-hover table-striped'>
  <tr>
    <th>Store</th>
    <th>Role</th>
    <th>User</th>
    <th>Password</th>
    <th>Name</th>
    <th>Birthday</th>
    <th>Tel no</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @staffs.each do |staff| %>
  <tr>
    <td><%= staff.store_id %></td>
    <td><%= staff.role_id %></td>
    <td><%= staff.user_id %></td>
    <td><%= staff.password %></td>
    <td><%= staff.name %></td>
    <td><%= staff.birthday %></td>
    <td><%= staff.tel_no %></td>
    <td><%= link_to 'Show', staff %></td>
    <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
    <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<div class="form-actions">
    <%= link_to 'New Staff', new_staff_path, :class => 'btn btn-primary' %>
</div>
