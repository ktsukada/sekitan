<%= simple_form_for(@customer) do |f| %>
   <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :staff, :collection => @staffs, :prompt => '-' %>
    <%= f.input :first_year %>
    <%= f.input :run %>
    <%= f.input :shaken %>
  </div>

  <div class="form-inputs">
    <%= f.button :submit ,:disable_with => '送信中...'%>
  </div>
<% end %>
