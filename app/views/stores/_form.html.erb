<%= simple_form_for(@store) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :company, :collection => @companies, :prompt => '-' %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :tel_no %>
  </div>
  <div  class="form-inputs">
    <%= f.button :submit, :disable_with => '送信中...' %>
  </div>
<% end %>
