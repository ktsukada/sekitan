<h1>Listing stores</h1>

<table>
  <tr>
    <th>Company</th>
    <th>Store</th>
    <th>Name</th>
    <th>Address</th>
    <th>Tel no</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stores.each do |store| %>
  <tr>
    <td><%= store.company_id %></td>
    <td><%= store.store %></td>
    <td><%= store.name %></td>
    <td><%= store.address %></td>
    <td><%= store.tel_no %></td>
    <td><%= link_to 'Show', store %></td>
    <td><%= link_to 'Edit', edit_store_path(store) %></td>
    <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

