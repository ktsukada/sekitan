<%- model_class = Car -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:maker_id) %>:</strong></dt>
  <dd><%= @car.car_name.maker.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:car_name_id) %>:</strong></dt>
  <dd><%= @car.car_name.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:grade1) %>:</strong></dt>
  <dd><%= @car.grade1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:grade2) %>:</strong></dt>
  <dd><%= @car.grade2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @car.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sale_start_at) %>:</strong></dt>
  <dd><%= @car.sale_start_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sale_end_at) %>:</strong></dt>
  <dd><%= @car.sale_end_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @car.notes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image1) %>:</strong></dt>
  <dd><%= @car.image1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image2) %>:</strong></dt>
  <dd><%= @car.image2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image3) %>:</strong></dt>
  <dd><%= @car.image3 %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              cars_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_car_path(@car), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              car_path(@car),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
