<h3>車両</h3>
<hr>

<table class='table table-hover table-striped'>
  <tr>
    <th>イメージ</th>
    <th>メーカー</th>
    <th>車種名</th>
    <th>グレード</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cars.each do |car| %>
  <tr>
    <td><%= image_tag car.image1, :class => 'list_image' %></td>
    <td><%= car.maker.name %></td> 
    <td><%= car.car_name.name %></td>
    <td><%= car.grade %></td>
    <td><%= link_to 'Show', car %><br>
    <%= link_to 'Edit', edit_car_path(car) %><br>
    <%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
  <%= paginate @cars %>  

<br />

<div class="form-actions">
  <%= link_to 'New Car', new_car_path, :class => 'btn btn-primary' %>
</div>