<%= simple_form_for @car, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :car_name %>
  <%= f.input :grade1 %>
  <%= f.input :grade2 %>
  <%= f.input :price %>
  <%= f.input :sale_start_at %>
  <%= f.input :sale_end_at %>
  <%= f.input :notes %>
  <%= f.input :image1 %>
  <%= f.input :image2 %>
  <%= f.input :image3 %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cars_path, :class => 'btn' %>
  </div>
<% end %>
